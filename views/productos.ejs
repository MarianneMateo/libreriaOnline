<%- include layouts/header.ejs%>
    <div class="container">
        <h4>
            <%= title %>
        </h4>

        <!-- inicio cards -->
        <div class="row">
            <% for( let libro = 0; libro < libros.length; libro++ ) { %>
                <div class="col-lg-3 d-flex align-items-stretch">
                    <div class="card">
                        <div class="card-body">
                            <img height="317" src="<%= libros[libro].image %>" class="card-img-top" alt="..." />
                            <h5 class="card-title">
                                <%= libros[libro].title %>
                            </h5>
                            <p class="card-text">
                                <%= libros[libro].description %>
                                    <h5>$
                                        <%= libros[libro].price %>
                                    </h5>
                            </p>
                            <a href="#" class="btn btn-primary">Comprar</a>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
    <%- include layouts/footer.ejs%>